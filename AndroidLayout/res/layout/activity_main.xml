<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Layout Assignment"
            android:textSize="20dp" />

        <Button
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ListView Layout" />
        
        <Button
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="GridView Layout" />
        
        <Button
            android:id="@+id/buttons4Linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4 buttons Linear Layout" />

        <Button
            android:id="@+id/buttons4Relative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4 buttons Relative Layout" />

        <Button
            android:id="@+id/buttons4Table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4 buttons Table Layout" />

        <Button
            android:id="@+id/buttons4Frame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4 buttons Frame Layout" />

        <Button
            android:id="@+id/buttons8Linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="8 buttons Linear Layout" />

        <Button
            android:id="@+id/buttons8Relative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="8 buttons Relative Layout" />

        <Button
            android:id="@+id/buttons8Table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="8 buttons Table Layout" />

        <Button
            android:id="@+id/buttons8Frame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="8 buttons Frame Layout" />
    </LinearLayout>

</ScrollView>